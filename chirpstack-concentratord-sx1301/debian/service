[Unit]
Description=ChirpStack Concentratord (SX1301)
Documentation=https://www.chirpstack.io/
Wants=network-online.target
After=network-online.target

[Service]
User=chirpstack
Group=chirpstack
ExecStart=/usr/bin/chirpstack-concentratord-sx1301 -c /etc/chirpstack-concentratord-sx1301/concentratord.toml -c /etc/chirpstack-concentratord-sx1301/channels.toml -c /etc/chirpstack-concentratord-sx1301/region.toml
Restart=on-failure

[Install]
WantedBy=multi-user.target
