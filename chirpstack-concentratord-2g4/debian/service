[Unit]
Description=ChirpStack Concentratord (2g4)
Documentation=https://www.chirpstack.io/
Wants=network-online.target
After=network-online.target

[Service]
User=chirpstack
Group=chirpstack
ExecStart=/usr/bin/chirpstack-concentratord-2g4 -c /etc/chirpstack-concentratord-2g4/concentratord.toml -c /etc/chirpstack-concentratord-2g4/channels.toml -c /etc/chirpstack-concentratord-2g4/region.toml
Restart=on-failure

[Install]
WantedBy=multi-user.target
